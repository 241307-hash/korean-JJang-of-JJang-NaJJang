

import random #랜덤하게 습도가 설정됨
x = random.randint(1, 100)
import random #랜덤하게 기온이 설정됨
y = random.randint(1, 40)
print("-------[현재 환경]-------")
print("습도💧:",x, "%",'온도🌡️:',y,'°C')

print("-------[재배할 작물을 입력하세요]-------")
s=input("작물이름:") #재배할 작물 입력

def f1(): #토마토를 입력하였을때 실행
  if x<78.1: 
    print("가습기 작동💧")
  if y<23.4:
    print("히터 작동🔥")
  if y>26.5:
    print("에어컨 작동❄️")
  if x>78.1 and 23.4<y<26.5:
    print("최적의 상태입니다.✅")  

def f2(): #딸기를 입력하였을때 실행
  if x<63.8	:
    print("가습기 작동💧")
  if y<22.1:
    print("히터 작동🔥")
  if y>27.6:
    print("에어컨 작동❄️")
  if x>63.8 and 22.1<y<27.6:
    print("최적의 상태입니다.✅")

print("-------[제어 결과]-------")
if s=="토마토":
  f1()
elif s=="딸기":
  f2()

else:
  print("지원하지 않는 작물입니다.🤷‍♂️")
